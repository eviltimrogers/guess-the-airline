      font-size: 0.6em;
      color: #aaa;
      margin-bottom: 20px;
      line-height: 1.8;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .options {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .option-button {
      background: #1a1a4e;
      border: 2px solid #3a3a8c;
      padding: 14px 16px;
      font-size: 0.55em;
      font-family: 'Press Start 2P', monospace;
      cursor: pointer;
      transition: all 0.15s ease;
      text-align: left;
      color: #ccc;
      line-height: 1.6;
      position: relative;
    }

    .option-button::before {
      content: '▸ ';
      color: #0ff;
      opacity: 0;
      transition: opacity 0.15s ease;
    }

    .option-button:hover:not(:disabled) {
      border-color: #0ff;
      background: #222266;
      color: #fff;
      box-shadow: 0 0 12px rgba(0, 255, 255, 0.3);
      transform: translateX(4px);
    }

    .option-button:hover:not(:disabled)::before {
      opacity: 1;
    }

    .option-button:disabled {
      cursor: not-allowed;
    }

    .option-button.correct {
      background: #0a3a0a;
      border-color: #0f0;
      color: #0f0;
      box-shadow: 0 0 15px rgba(0, 255, 0, 0.3);
    }

    .option-button.correct::before {
      content: '★ ';
      color: #0f0;
