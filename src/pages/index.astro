      transition: all 0.3s ease;
      text-align: left;
    }

    .option-button:hover:not(:disabled) {
      border-color: #667eea;
      background: #f8f9ff;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
    }

    .option-button:disabled {
      cursor: not-allowed;
      opacity: 0.6;
    }

    .option-button.correct {
      background: #10b981;
      border-color: #10b981;
      color: white;
    }

    .option-button.incorrect {
      background: #ef4444;
      border-color: #ef4444;
      color: white;
    }

    .feedback {
      text-align: center;
      margin-top: 20px;
      font-size: 1.3em;
      font-weight: bold;
      min-height: 30px;
    }

    .feedback.correct {
      color: #10b981;
    }

    .feedback.incorrect {
      color: #ef4444;
    }

    .next-button {
      display: block;
      margin: 20px auto 0;
      padding: 15px 40px;
      font-size: 1.1em;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .next-button:hover {
      background: #5568d3;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .loading {
      text-align: center;
      font-size: 1.2em;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>✈️ Guess the Airline</h1>
    <div class="score">
      Score: <span id="correct-count">0</span> / <span id="total-count">0</span>
    </div>

    <div id="game-container">
      <div class="question-section">
        <div class="prompt">Which airline uses this IATA code?</div>
        <div class="iata-code" id="iata-code">--</div>
        <div class="options" id="options-container"></div>
        <div class="feedback" id="feedback"></div>
        <button class="next-button" id="next-button" style="display: none;">Next Question →</button>
      </div>
    </div>
  </div>

  <script define:vars={{ airlines }}>
    let correctCount = 0;
    let totalCount = 0;
    let currentCorrectAnswer = null;
    let answered = false;

    // Fisher-Yates shuffle algorithm for proper randomization
    function shuffle(array) {
      const shuffled = [...array];
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }
      return shuffled;
    }

    function getRandomAirlines(count, exclude = null) {
      const available = exclude 
        ? airlines.filter(a => a.id !== exclude.id)
        : airlines;
      
      const shuffled = shuffle(available);
      return shuffled.slice(0, count);
    }

    function loadQuestion() {
      // Reset state
      answered = false;
      document.getElementById('feedback').textContent = '';
      document.getElementById('feedback').className = 'feedback';
      document.getElementById('next-button').style.display = 'none';

      // Select correct answer
      currentCorrectAnswer = airlines[Math.floor(Math.random() * airlines.length)];

      // Display IATA code
      document.getElementById('iata-code').textContent = currentCorrectAnswer.iataCode;

      // Get 3 random incorrect options
      const incorrectOptions = getRandomAirlines(3, currentCorrectAnswer);
      
      // Combine and shuffle all options
      const allOptions = shuffle([currentCorrectAnswer, ...incorrectOptions]);

      // Display options
      const optionsContainer = document.getElementById('options-container');
      optionsContainer.innerHTML = '';

      allOptions.forEach(airline => {
        const button = document.createElement('button');
        button.className = 'option-button';
        button.textContent = airline.name;
        button.dataset.airlineId = airline.id;
        button.onclick = () => handleAnswer(airline, button);
        optionsContainer.appendChild(button);
      });
    }

    function handleAnswer(selectedAirline, button) {
      if (answered) return;

      answered = true;
      totalCount++;

      // Disable all buttons
      const buttons = document.querySelectorAll('.option-button');
      buttons.forEach(btn => btn.disabled = true);

      // Check if answer is correct
      const isCorrect = selectedAirline.id === currentCorrectAnswer.id;

      if (isCorrect) {
        correctCount++;
        button.classList.add('correct');
        document.getElementById('feedback').textContent = '✓ Correct!';
        document.getElementById('feedback').className = 'feedback correct';
      } else {
        button.classList.add('incorrect');
        // Highlight the correct answer
        buttons.forEach(btn => {
          if (btn.dataset.airlineId === currentCorrectAnswer.id) {
            btn.classList.add('correct');
          }
        });
        document.getElementById('feedback').textContent = `✗ Wrong! It was ${currentCorrectAnswer.name}`;
        document.getElementById('feedback').className = 'feedback incorrect';
      }

      // Update score
      document.getElementById('correct-count').textContent = correctCount;
      document.getElementById('total-count').textContent = totalCount;

      // Show next button
      document.getElementById('next-button').style.display = 'block';
    }

    // Initialize game
    document.getElementById('next-button').onclick = loadQuestion;
    loadQuestion();
  </script>
</body>
</html>
