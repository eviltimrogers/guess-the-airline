// Fetch airlines data at build time
interface Airline {
  iataCode: string;
  name: string;
  id: string;
}

let airlines: Airline[] = [];

try {
  const response = await fetch('https://iata-code-decoder-api.timrogers.co.uk/airlines');
  
  if (!response.ok) {
    throw new Error(`Failed to fetch airlines: ${response.status} ${response.statusText}`);
  }
  
  const data = await response.json();
  airlines = data.data;
  
  if (!Array.isArray(airlines) || airlines.length === 0) {
    throw new Error('No airline data available');
  }
} catch (error) {
  console.error('Error fetching airlines:', error);
  throw error; // This will cause the build to fail, which is appropriate
}
