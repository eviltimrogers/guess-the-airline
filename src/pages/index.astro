    }

    @keyframes glow-title {
      0% { text-shadow: 0 0 10px #ff0, 0 0 30px rgba(255, 255, 0, 0.4); }
      100% { text-shadow: 0 0 15px #ff0, 0 0 50px rgba(255, 255, 0, 0.6); }
    }

    .score {
      text-align: center;
      color: #0ff;
      font-size: 0.7em;
      margin-bottom: 20px;
      text-shadow: 0 0 8px rgba(0, 255, 255, 0.6);
      letter-spacing: 2px;
    }

